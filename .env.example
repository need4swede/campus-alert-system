# Environment variables for Campus Alert System

# Build mode (development or production)
BUILD_MODE=development

# Web application port
PORT=8080

# Database configuration
DB_PASSWORD=your_secure_password_here
DB_PORT=5432

# Organization settings
ORGANIZATION_ID=campus_alert
ORGANIZATION_NAME=Campus Alert System
DOMAIN=example.edu
PRIMARY_COLOR=#007bff
SECONDARY_COLOR=#6c757d

# Alert settings
EVACUATION_LOCATION=Main Parking Lot
SHELTER_HAZARD_TYPE=Tornado

# pgAdmin configuration
PGADMIN_EMAIL=admin@example.com
PGADMIN_PASSWORD=admin
PGADMIN_PORT=5050

# Microsoft OAuth (for production)
MS_CLIENT_ID=your_client_id_here
MS_TENANT_ID=your_tenant_id_here
MS_REDIRECT_URI=https://your-domain.com/auth/callback

# Apple Push Notification Service (for iOS app)
APNS_KEY_ID=your_key_id_here
APNS_TEAM_ID=your_team_id_here
